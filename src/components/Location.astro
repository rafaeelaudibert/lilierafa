---
import { WEDDING_CONFIG, type Locale } from "../constants/wedding"
import { getLocale } from "astro-i18n-aut"
import Hearts from "./Hearts.astro"

const locale = getLocale(Astro.url) as Locale
const config = WEDDING_CONFIG[locale]
---

<section class="py-20">
  <div class="text-center mb-8">
    <Hearts />

    <div class="text-center mb-16">
      <p class="text-gray-600 text-xl max-w-3xl mx-auto leading-relaxed">
        {config.longCallout}
      </p>
    </div>

    <div class="mb-12" id="location">
      <div class="flex flex-col gap-2 items-start mb-8">
        <div class="text-gray-400 text-sm uppercase tracking-wide mb-2">
          {config.venue.header}
        </div>
        <div
          class="flex flex-col md:flex-row w-full items-start md:items-center gap-2 justify-between"
        >
          <div
            class="text-4xl md:text-5xl font-bold text-gray-800 leading-tight text-left"
          >
            {config.venue.title}<br />
            <span class="text-[var(--brown)]">{config.venue.name}</span>
          </div>
          <div class="flex-1 flex justify-end items-center">
            <a
              href={config.venue.url}
              class="inline-block px-6 py-3 bg-[var(--brown)] text-white font-semibold rounded-md shadow-lg text-base hover:bg-[#7A6248] transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-[var(--brown)] focus:ring-offset-2"
              target="_blank"
              rel="noopener noreferrer"
              style="min-width: 200px;"
            >
              {config.venue.button}
            </a>
          </div>
        </div>
      </div>

      <div class="mb-12">
        <img
          src={config.venue.image}
          alt={`${config.venue.name} venue`}
          class="w-full h-96 object-cover rounded-lg shadow-lg"
        />
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {
          config.venue.cards.map((card) => (
            <div class="text-left">
              <h3 class="font-bold text-gray-800 text-lg mb-3">{card.label}</h3>
              <p class="text-gray-600 leading-relaxed">{card.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
