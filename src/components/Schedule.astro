---
import { Image } from "astro:assets"
import { WEDDING_CONFIG, type Locale } from "../constants/wedding"
import { getLocale } from "astro-i18n-aut"

const locale = getLocale(Astro.url) as Locale
const config = WEDDING_CONFIG[locale]
---

<section id="schedule" class="py-10">
  <!-- Section label and heading - constrained width -->
  <div class="max-w-6xl mx-auto px-4 mb-16">
    <div class="text-gray-400 text-sm uppercase tracking-wide mb-2">
      {config.schedule.header}
    </div>
    <h2 class="text-4xl md:text-5xl font-bold text-gray-800 leading-tight">
      {config.schedule.title}<br />
      <span class="text-[var(--brown)]">{config.schedule.detail}</span>
    </h2>
  </div>

  <!-- Horizontal Scrollable Timeline - full width -->
  <div class="relative w-full">
    <!-- Scrollable timeline container -->
    <div class="overflow-x-auto pb-4">
      <div class="flex gap-12 min-w-max px-8 justify-center">
        <!-- Timeline line - positioned relative to content -->
        <div
          class="absolute top-1/2 left-8 right-8 h-0.5 bg-gray-300 transform -translate-y-1/2 pointer-events-none"
        >
        </div>

        {
          config.schedule.agenda.map((item, index) => {
            return (
              <div class="flex-shrink-0 w-72 text-center relative z-10">
                <div class="bg-white rounded-lg shadow-lg border border-gray-100 overflow-hidden h-96 flex flex-col">
                  <Image
                    src={item.image}
                    alt={item.title}
                    class="w-full h-48 object-cover"
                  />
                  <div class="p-6 flex-grow flex flex-col justify-between">
                    <div class="text-2xl font-bold text-[var(--brown)] mb-2">
                      {item.time}
                    </div>
                    <h3 class="font-bold text-gray-800 text-lg mb-2">
                      {item.title}
                    </h3>
                    <p class="text-gray-600 text-sm leading-relaxed">
                      {item.description}
                    </p>
                  </div>
                </div>
              </div>
            )
          })
        }
      </div>
    </div>
  </div>

  <!-- Additional info -->
  <div class="mt-16 text-center px-4">
    <p class="text-gray-600 text-lg max-w-2xl mx-auto leading-relaxed">
      {config.schedule.description}
    </p>
  </div>
</section>
