---
import { WEDDING_CONFIG, type Locale } from "../constants/wedding"
import { getLocale } from "astro-i18n-aut"
import Layout from "../layouts/Layout.astro"

const locale = getLocale(Astro.url) as Locale
const config = WEDDING_CONFIG[locale]

// 404-specific content
const errorContent = {
  en: {
    title: "Oops! Wrong Aisle!",
    errorCode: "404.",
    subtitle: "Go back to the wedding?",
  },
  pt: {
    title: "Oops! Corredor Errado!",
    errorCode: "404.",
    subtitle: "Voltar para o casamento?",
  },
}

const content = errorContent[locale]
---

<Layout>
  <section
    id="404-hero"
    class="h-screen w-full fixed top-0 left-0 z-0"
    style="background-image: url('https://picsum.photos/seed/lilierafa/1920/1080'); background-size: cover; background-position: center; background-repeat: no-repeat;"
  >
    <!-- Background overlay for better text readability -->
    <div class="absolute inset-0 bg-black/40"></div>

    <div class="relative z-10 h-full flex items-end justify-center pb-12">
      <div class="hidden lg:block">
        <div class="text-center max-w-6xl mx-auto px-4">
          <div class="flex justify-between items-start mb-8">
            <div class="text-left text-white text-md font-light max-w-2xl">
              <p>{content.title}</p>
            </div>
            <div class="text-white text-md font-light">
              <span>{content.errorCode}</span>&nbsp;
              <a class="underline" href={`/${locale}`}>{content.subtitle}</a>
            </div>
          </div>

          <h1
            class="text-[10rem] xl:text-[12rem] font-bold text-white leading-none"
          >
            {config.couple.her}
            <span class="text-[var(--beige)]">&</span>
            {config.couple.him}
          </h1>
        </div>
      </div>

      <div class="lg:hidden px-2">
        <h1 class="text-[8rem] mb-4 font-bold text-white leading-none">
          {config.couple.her}
          <span class="text-[var(--beige)]">&</span>
          {config.couple.him}
        </h1>

        <div class="text-left max-w-6xl mx-auto px-2">
          <div class="flex flex-col gap-2 items-start">
            <div class="text-white text-md font-light">
              <p>{content.title}</p>
            </div>
            <div class="text-white text-md font-light">
              <span>{content.errorCode}</span>&nbsp;
              <a class="underline" href={`/${locale}`}>{content.subtitle}</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  html,
  body {
    width: 100%;
    height: 100%;
    overflow: hidden;
  }
</style>
